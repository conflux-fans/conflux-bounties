# ===========================================

# Server
PORT=3001
NODE_ENV=development

# API authentication (comma-separated keys)
API_KEYS=changeme-key-1,changeme-key-2

# Database
DATABASE_PATH=./data/dashboard.db
RETENTION_DAYS=30

# Default polling interval (ms)
METRIC_INTERVAL_MS=5000

# Conflux RPC URLs (comma-separated)
CONFLUX_CORE_RPC_URLS=https://main.confluxrpc.com
CONFLUX_ESPACE_RPC_URLS=https://evm.confluxrpc.com

# Slack alerting
ALERT_SLACK_WEBHOOK=

# Email alerting (SMTP)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=alerts@example.com
ALERT_EMAIL_TO=

# Generic webhook alerting
ALERT_WEBHOOK_URL=

# Dashboard
VITE_API_URL=http://localhost:3001
VITE_WS_URL=http://localhost:3001
